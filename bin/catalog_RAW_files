PROGNAME=${0##*/}
PROGVERSION=0.9.2

# setup defaults and statics
SILENT=0
DATAROOT=/Volumes/Drobo1
CATALOG_FILE=/Users/dacb/msmskit/bin/catalog_RAW_file

# usage message
usage()
{
cat << EOF

Usage: $0 [options]

This script catalogs proteomics data in RAW files.  It searches a directory tree
for RAW files.  Before any data are added to the catalog, this script will verify
that a catalog entry does not already exist.

Options:
EOF
cat << EOF | column -s\& -t
  -h|--help & Show this message
  -v|--version & Show version information
  -s|--silent & Run in silent mode (no output log)
  -d|--dir <directory> & Path of directory to be searched relative to $DATAROOT
EOF
}

# parse arguments
SHORTOPTS="hvsd:"
LONGOPTS="help,version,silent,dir:"
ARGS=$(getopt -s bash --options $SHORTOPTS --longoptions $LONGOPTS --name $PROGNAME -- "$@")
if [ $? != 0 ]; then usage; exit 1; fi
eval set -- "$ARGS"
# loop through options
while true; do
	case $1 in
		-h|--help)
			usage
			exit 0
			;;
		-v|--version)
			echo "$PROGVERSION"
			exit 0
			;;
		-s|--silent)
			SILENT=1
			shift
			;;
		-d|--dir)
			DIR=$2
			shift 2
			;;
		--) 
			shift
			break
			;;
		*) 
			shift
			break
			;;
	esac
done

if [ -z "${DIR+xxx}" ]; then
	usage
	exit 1
fi

cd $DATAROOT

# find RAW files that have not been modified for at least 60 minutes
find $DIR -cmin +60 \( -name '*.RAW' ! -name '.*' \) -exec $CATALOG_FILE $SILENT $DATAROOT {} \;
